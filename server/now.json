{
	"name": "node-lambda",
	"version": 2,
	"builds": [
		{ 
		    "src":  "/index.js", 
	        "use": "@now/node-server",
	        "config": {
	        	"includeFiles": [
	        		"data/**"
	        	]
	        } 
        }
	],
	"routes": [
		{ "src": "/", "dest": "/index.js" },
		{ "src": "/users", "methods": ["POST"],  "dest": "/index.js" },
		{ "src": "/user/(?<id>[^/]*)", "methods": ["POST"],  "dest": "/index.js" }
	]
}