{
	"name": "node-lambda",
	"version": 2,
	"builds": [
		{ 
		    "src":  "*.js", 
	        "use": "@now/node-server",
	        "config": {
	        	"includeFiles": [
	        		"data/**"
	        	]
	        } 
        },
        {
        	"src": "/data/**", 
        	"use": "@now/static"
        }
	],
	"routes": [		
		{ "src": "/.*", "methods": ["POST"],  "dest": "/index.js" }	
	]
}